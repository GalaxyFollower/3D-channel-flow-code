# .__________________________________________________________________.
# |                                                                  |
# |                     Declaration of extension                     |
# |__________________________________________________________________|

.SUFFIXES:.F90

# .__________________________________________________________________.
# |                                                                  |
# |                   Compiler and editor of links                   |
# |__________________________________________________________________|
# |                                                                  |
# | Sequential:   FC  = gfortran                                     |
# | # Compiler Fortran77         : xlf                               |
# |                                                                  |
# | Parallel:     FC  = mpif77                                       |
# | # Compiler Fortran77 + OpenMP: xlf_r / OPAR = -qsmp=omp / KeyOMP |
# |__________________________________________________________________|

CUDAFLAGS  = -Mcuda
FC         = pgf90
FLD        = $(FC)
RM         = /bin/rm -f
MV         = mv

#######################################################################
#                            COMPILATION                              #
#######################################################################

# .__________________________________________________________________.
# |                                                                  |
# |        Optimization options                                      |
# |                                                                  |
# |  Joe    : OLEV  = -qhot -O3 -qtune=auto -qarch=auto -qcache=auto |
# |  Power4 : OLEV  = -qhot -O3 -qtune=pwr4 -qarch=pwr4              |
# |  Power5 : OLEV  = -qhot -O3 -qtune=pwr5 -qarch=pwr5              |
# |__________________________________________________________________|

OLEV       = 
FOPT       = -qstrict 
FOPT       =  
FMAX       = -qipa 
FMAX       = 

# .__________________________________________________________________.
# |                                                                  |
# |        Parallelization options: OpenMP                           |
# |__________________________________________________________________|

OPAR       = -qsmp=omp
OPAR       = 

# .__________________________________________________________________.
# |                                                                  |
# |        Debugging options                                         |
# |__________________________________________________________________|

ODEB       = -qnooptimize 
FDEB       = -qcheck -qdbg  \
#            -qflttrap=:ov:und:zero:inv:en \
             -qinitauto=FF \
	     -qhalt=l 
#            -qextchk  
#            -qfullpath
#            -qundef : implicit none

# .__________________________________________________________________.
# |                                                                  |
# |        Portage options                                           |
# |__________________________________________________________________|

OPRT       = -qautodbl=dbl4 -qdpc=e 
OPRT       =

# .__________________________________________________________________.
# |                                                                  |
# |        Inputs/outputs options of the compiler                    |
# |__________________________________________________________________|

OES        = -qfixed=132 -qsuffix=f=f 
OES        =

# .__________________________________________________________________.
# |                                                                  |
# |         Listing options                                          |
# |                                                                  |
# |  Sequential:  OLST   = -qlistopt -qreport=hotlist -qsource       |
# |  OpenMP    :  OLST   = -qlistopt -qreport=smplist -qsource       |
# |__________________________________________________________________|

OLST       = -qlistopt -qreport=hotlist -qsource 
OLST       =

# .__________________________________________________________________.
# |                                                                  |
# |        Profile options                                           |
# |__________________________________________________________________|

PROF       = -pg -qfullpath -qdbg 
PROF       = 

# .__________________________________________________________________.
# |                                                                  |
# |        COMPILATION:                                              |
# |                                                                  |
# |        optimize:                                                 |
# |                 FFLAGS =  -fdefault-real-8 -std=f95 \            |
# |                           $(OLEV) $(FOPT) $(FMAX) $(OPAR)\       | 
# |                           $(OPRT) $(PROF) $(OES) $(OLST)         |
# |        debug:                                                    |
# |                 FFLAGS =  $(ODEB)$(FDEB) $(FMAX) $(OPAR)\        |
# |                           $(OPRT) $(PROF) $(OES) $(OLST)         |
# |__________________________________________________________________|  


FFLAGS = $(OLEV) $(FOPT) $(FMAX) $(OPAR) $(OPRT) $(PROF) $(OES) $(OLST)


#######################################################################
#                         EDITION OF LINKS                            #
#######################################################################

# .__________________________________________________________________.
# |                                                                  |
# |        Include Paths:                                            |
# |        CRIHAN                                                    |
# |        INC       = -I/soft/library/netCDF.32/include/            |
# |        GNU                                                       |
# |__________________________________________________________________|  

INC       = 
#-I /usr/include/

# .__________________________________________________________________.
# |                                                                  |
# |       Fortran libraries                                          |
# |__________________________________________________________________|  

#LIBS      = -lmass -lmassv -lessl -lm /soft/library/netCDF.32/lib/libnetcdf.a
#LIBS      = -lm /usr/lib/libblas.so  -lm /usr/lib/libnetcdf.a

# .__________________________________________________________________.
# |                                                                  |
# |       Optimization option                                        |
# |__________________________________________________________________|  

LDLEV     = $(OLEV)

# .__________________________________________________________________.
# |                                                                  |
# |        Portage options                                           |
# |__________________________________________________________________|

#LDREN     = -brename:.flush,.flush_ -brename:.etime,.etime_ -brename:.lnblnk,.lnblnk_
#LDREN     = -brename:.etime,.etime_ -brename:.lnblnk,.lnblnk_
#LDREN     = -pedantic -std=std

# .__________________________________________________________________.
# |                                                                  |
# |        Memory options                                            |
# |__________________________________________________________________|

LDMEM     = -bmaxdata:0x80000000 -blpdata
LDMEM     = -blpdata
LDMEM     = 

# .__________________________________________________________________.
# |                                                                  |
# |        Edition of links options                                  |
# |__________________________________________________________________|

LDFLAGS   = $(LDLEV) $(LDMEM) $(OPAR) $(LDREN) $(PROF)


#######################################################################
#                         Fortran includes                            #
#######################################################################

# .__________________________________________________________________.
# |                                                                  |
# |        Fortran includes                                          |
# |__________________________________________________________________|

FHDRS      = \
             common.mpf

# .__________________________________________________________________.
# |                                                                  |
# |        Directories: object, source & input                       |
# |__________________________________________________________________|


OBJDIR    = bin
SRCDIR    = src
INPUTDIR  = input
VPATH     = ${SRCDIR}:\
            ${SRCDIR}/Main:\
            ${SRCDIR}/Hydro:\
            ${SRCDIR}/LinearSolver:\
            ${SRCDIR}/Utilities:\
            ${SRCDIR}/TestExamples:\
            ${SRCDIR}/Save:\
            ${SRCDIR}/LES:\
            ${SRCDIR}/Parallel_CUDA: 

# .__________________________________________________________________.
# |                                                                  |
# |        Objects Fortran                                           |
# |__________________________________________________________________|

FOBJS = \
	${OBJDIR}/module_variables.o\
	${OBJDIR}/module_interfaces.o\
	${OBJDIR}/module_geometry.o\
        ${OBJDIR}/module_statistics.o\
	${OBJDIR}/module_cuda.o\
	${OBJDIR}/cuda_sor3D.o\
	${OBJDIR}/nsmp3D.o\
	${OBJDIR}/Hydro.o\
	${OBJDIR}/Eqn_WaterLevel.o\
	${OBJDIR}/Eqn_VelocityAdvDiff.o\
	${OBJDIR}/Eqn_Poisson.o\
	${OBJDIR}/BC_Velocity.o\
	${OBJDIR}/BC_Poisson.o\
	${OBJDIR}/BC_WaterLevel.o\
	${OBJDIR}/input_data.o\
	${OBJDIR}/input_parameters.o\
	${OBJDIR}/input_initial.o\
	${OBJDIR}/input_functions.o\
	${OBJDIR}/geometry.o\
	${OBJDIR}/restart_in.o\
	${OBJDIR}/restart_out.o\
	${OBJDIR}/SavetecVertex.o\
	${OBJDIR}/SaveParaviewVertex.o\
	${OBJDIR}/SaveReferenceFS.o\
	${OBJDIR}/SaveParaviewFS.o\
	${OBJDIR}/SaveFullMatrixA.o\
        ${OBJDIR}/SaveStatistics.o\
	${OBJDIR}/interpolation2D.o\
	${OBJDIR}/interpolation3D.o\
	${OBJDIR}/interpolationEta.o\
	${OBJDIR}/gradientLSM.o\
	${OBJDIR}/gradientLSM2D.o\
	${OBJDIR}/gradientGGF.o\
	${OBJDIR}/ReOrderingIndex.o\
        ${OBJDIR}/Jacobi.o\
	${OBJDIR}/sor3D.o\
	${OBJDIR}/sior3D.o\
	${OBJDIR}/Jsor3D.o\
	${OBJDIR}/psor3D.o\
	${OBJDIR}/coloring.o\
	${OBJDIR}/Multisor3D.o\
	${OBJDIR}/SchwarzSOR.o\
	${OBJDIR}/advection3D.o\
	${OBJDIR}/diffusion3D.o\
	${OBJDIR}/Poisson_testError.o\
	${OBJDIR}/NS_testTimeError.o\
	${OBJDIR}/FS_testTimeError.o\
	${OBJDIR}/Turbulence_LES.o\

# .__________________________________________________________________.
# |                                                                  |	
# |        Sources Fortran                                           |
# |__________________________________________________________________|

INC_COMMON = -I ${SRCDIR}/Include

# .__________________________________________________________________.
# |                                                                  |
# |        Compilation Fortran                                       |
# |                                                                  |
# |        Pour faire sortir les fichiers pre-compile avec cpp       |
# |        au lieu de les effacer ajouter -d apres $(FC)             |
# |__________________________________________________________________|


${OBJDIR}/%.o:  %.F90
	$(FC) $(CUDAFLAGS) $(INC) $(INC_COMMON) -o $@ -c $<


#######################################################################
#                         FINAL COMPILATION                           #
#######################################################################

# .__________________________________________________________________.
# |                                                                  |
# |        Link Fortran                                              |
# |__________________________________________________________________|

EXEC  = nsmp3D
EXECE = nsmp3D.exe

# .__________________________________________________________________.
# |                                                                  |
# |       Destination work directory                                 |
# |__________________________________________________________________|

DEST = input

# .__________________________________________________________________.
# |                                                                  |
# |        Compilation                                               |
# |__________________________________________________________________|

all: 	   $(FOBJS)
	   $(FLD) $(CUDAFLAGS) $(FOBJS) $(LIBS) -o $(EXEC)
	   $(MV) $(EXEC) $(DEST)

# .__________________________________________________________________.
# |                                                                  |
# |                            Cleaning                              |
# |__________________________________________________________________|

clean:    
	   $(RM) $(FOBJS) $(EXEC) *.mod 

#######################################################################
#                                                                     #
#                               END                                   #
#                                                                     #
#######################################################################

